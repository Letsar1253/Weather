<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Weather.MainPage"
             x:Name="MainPageObject">

    <ScrollView x:Name="MainPageScrollView">
        <Grid>
            <VerticalStackLayout
                VerticalOptions="Start"
                x:Name="WeatherImageLayout"
                />
            <VerticalStackLayout
                x:Name = "ThermometerLayout"
                HorizontalOptions="Center"
                VerticalOptions="Center">
                <Image BindingContext="{x:Reference MainPageObject}"
                    x:Name = "Thermometer"
                    Source = "thermometer.png"
                    VerticalOptions = "Center"
                    HorizontalOptions = "Center"
                    HeightRequest = "{Binding Height}"
                    />
            </VerticalStackLayout>
            <VerticalStackLayout
                x:Name = "ThermometerBarLayout"
                HorizontalOptions="Center"
                VerticalOptions="End">
                <Rectangle
                    x:Name= "ThermometerBar"
                    Fill = "#DB5166"
                    RadiusX = "20"
                    RadiusY = "10"
                    WidthRequest = "0"
                    HeightRequest = "0"/>
            </VerticalStackLayout>
            <VerticalStackLayout
                HorizontalOptions="Center"
                VerticalOptions="End">
                <Label BindingContext = "{x:Reference ThermometerBar}"
                    x:Name="ThermometerBarValue"
                    Text="" 
                    FontSize="Large"/>
            </VerticalStackLayout>
            <VerticalStackLayout
                VerticalOptions="End"
                HorizontalOptions="Start"
                x:Name="InformationLayout" 
                Margin="0,0,0,50" 
                MaximumWidthRequest="200">
                <!--<Rectangle
                    x:Name = "DateInfoPanel"
                    Fill="Blue"
                    Stroke="Black"
                    StrokeThickness="3"
                    RadiusX="50"
                    RadiusY="10"
                    WidthRequest="200"
                    HeightRequest="100"
                    HorizontalOptions="Start">
                </Rectangle>-->
                <!--<Button 
                    Text="Click to Rotate Text!"
                    Clicked="Button_Clicked" 
                    BackgroundColor="AliceBlue"
                    TextColor="Black"
                    Opacity="0.5"
                    BorderWidth="3"
                    BorderColor="Black" MaximumWidthRequest="150"
                    />-->
                <Frame 
                    BorderColor="AliceBlue"
                    CornerRadius="5"
                    Padding="8" 
                    Margin="10,0,0,100"
                    Opacity="0.8">
                    <StackLayout>
                        <Label 
                            Text="Информация"
                            FontSize="16"
                            FontAttributes="Bold" />
                        <BoxView 
                            Color="Grey"
                            HeightRequest="2"
                            HorizontalOptions="Fill" />
                        <Label Text="Четверг, 14 июля"/>
                        <Label 
                            Text="30 ℃"
                            FontSize="24" />
                    </StackLayout>
                </Frame>
            </VerticalStackLayout>
            <VerticalStackLayout                 
                VerticalOptions="Center"
                x:Name="ButtonsLayoutLeft" >
                <Button BindingContext="{x:Reference MainPageObject}"
                    Clicked="Button_Clicked" 
                    ImageSource="arrowleftsmall.png"
                    BackgroundColor="{Binding BackgroundColor}" 
                    HorizontalOptions="Start"     
                    BorderWidth="0"
                    />
            </VerticalStackLayout>
            <VerticalStackLayout                 
                VerticalOptions="Center"
                x:Name="ButtonsLayoutRight" >
                <Button BindingContext="{x:Reference MainPageObject}"
                    Clicked="Button_Clicked_2" 
                    ImageSource="arrowrightsmall.png"
                    BackgroundColor="{Binding BackgroundColor}" 
                    HorizontalOptions="End"
                    BorderWidth="0"
                    />
            </VerticalStackLayout>
        </Grid>
        
        
    </ScrollView>

</ContentPage>
