<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Weather.MainPage"
             x:Name="MainPageObject">

    <ScrollView x:Name="MainPageScrollView">
        <Grid>
            <VerticalStackLayout
                VerticalOptions="Start"
                x:Name="WeatherImageLayout"
                />
            <VerticalStackLayout
                x:Name = "ThermometerLayout"
                HorizontalOptions="Center"
                VerticalOptions="Center">
                <Image BindingContext="{x:Reference MainPageObject}"
                    x:Name = "Thermometer"
                    Source = "thermometer.png"
                    VerticalOptions = "Center"
                    HorizontalOptions = "Center"
                    HeightRequest = "{Binding Height}"
                    />
            </VerticalStackLayout>
            <VerticalStackLayout
                x:Name = "ThermometerBarLayout"
                HorizontalOptions="Center"
                VerticalOptions="Center">
                <Rectangle BindingContext="{x:Reference Thermometer}"
                    Fill="Pink"
                    RadiusX="0"
                    RadiusY="4"
                    WidthRequest="300"
                    HeightRequest = "400"/>
            </VerticalStackLayout>
            <VerticalStackLayout
                VerticalOptions="End"
                HorizontalOptions="Start"
                x:Name="InformationLayout">
                <Rectangle
                    x:Name = "DateInfoPanel"
                    Fill="Blue"
                    Stroke="Black"
                    StrokeThickness="3"
                    RadiusX="50"
                    RadiusY="10"
                    WidthRequest="200"
                    HeightRequest="100"
                    HorizontalOptions="Start" />
            </VerticalStackLayout>
            <VerticalStackLayout
                VerticalOptions="Center"
                x:Name="ButtonsLayout">
            </VerticalStackLayout>
        </Grid>
        
        
    </ScrollView>

</ContentPage>
